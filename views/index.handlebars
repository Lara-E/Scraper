<ul class="nav">
    <h1>NFL Scraper</h1>
    <li class="nav-item">
        <a class="nav-link active" href="/">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/saved">Saved</a>
    </li>
    <button id="scrape" type="button" class="btn btn-primary">Scrape Articles</button>
</ul>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>New Articles</h2>
        </div>
        <div id="articles" class="row">
            <div class="col-lg-12">
                {{!-- <h2 id="no-new">Sorry no new articles at this time.</h2> --}}
                <ol>
                    {{#each article}}
                    {{#unless saved}}
                    <h3><a href="http://espn.com{{link}}" class="article-link">{{title}}</a></h3>
                    <p>{{summary}}</p>
                    <button type="button" class="btn btn-primary save-article" data-id="{{_id}}">Save Article</button>
                    {{/unless}}
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2>Scraping ESPN for your articles...</h2>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>